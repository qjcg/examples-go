	RUN for a in ./$export_dir/A*.jwt ; do nsc import account --file $a ; done
	RUN for u in ./$export_dir/U*.jwt ; do nsc import user --file $u ; done
	RUN nsc import keys --dir ./$export_dir

	RUN --interactive /bin/bash --login


